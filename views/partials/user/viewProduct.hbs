            $(".list-of-compliment").fadeIn();
        });
    });

    function textValidate() {
        const reviewArea = document.getElementById('reviewArea');
        if (reviewArea.value.trim() == '') {
            Swal.fire({
                icon: 'warning',
                title: 'Please write your review',
                showConfirmButton: false,
                timer: 2000
            })
            return false
        }
        return true
    }

