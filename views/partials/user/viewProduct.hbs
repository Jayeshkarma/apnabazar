                                timer: 2000
                            })
                        }
                    },
                    error: () => {
                        Swal.fire({
                            icon: 'error',
                            title: 'An error Occured',
                            showConfirmButton: false,
                            timer: 2000
                        })
                    }
                })
            }, 1500)
        }
    })

