            </div>
        </div>
    </div>
</section>
<section class="container mt-3 mb-5">
    <div class="header-sec text-center">
        <h3>Order Details</h3>
    </div>
    <div class="row mt-5">
        <div class="col-md-4 shipAddress">
            <h6 class="text-center mt-3">Order Info</h6>
            <div>
                <div class="detailDiv text-secondary">
                    <div class=" col-6" style="float: right;">
                        <span>Order Number </span><br>
                        <span>Date </span><br>
                        <span>Discount </span><br>
                        <span>Total </span><br>
                        <span>Order Status</span><br>
                        <span>Payment Method</span><br>
                    </div>
                    <div class=" col-6">
                        <span>: {{#each orderDetails}}{{this.order}}{{/each}}</span><br>
                        <span>: {{orderDate}}</span><br>
                        <span>: Rs.{{#each orderDetails}}{{this.discount}}{{/each}}</span><br>
                        <span>: Rs.{{#each orderDetails}}{{this.totalAmount}}{{/each}}</span><br>
                        <span>: {{#each orderDetails}}{{this.orderStatus}}{{/each}}</span><br>
                        <span>: {{#each orderDetails}}{{this.paymentMethod}}{{/each}}</span><br>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4  shipAddress">
            <h6 class="text-center mt-3">Shipping Address</h6>
            <div>
                <div class="detailDiv  text-secondary">
                    <div class=" col-6" style="float: right;">
                        <span>Name</span><br>
                        <span>Mobile </span><br>
                        <span>City </span><br>
                        <span>Pincode</span><br>
                        <span>District</span><br>
                        <span>State</span><br>
                        <span>Address</span><br>
                    </div>
                    <div class=" col-6">
                        <span>: {{#each orderDetails}}{{this.address.name}}{{/each}}</span><br>
                        <span>: {{#each orderDetails}}{{this.address.mobile}}{{/each}}</span><br>
                        <span>: {{#each orderDetails}}{{this.address.city}}{{/each}}</span><br>
                        <span>: {{#each orderDetails}}{{this.address.pincode}}{{/each}}</span><br>
                        <span>: {{#each orderDetails}}{{this.address.district}}{{/each}}</span><br>
                        <span>: {{#each orderDetails}}{{this.address.state}}{{/each}}</span><br>
                        <span>: {{#each orderDetails}}{{this.address.address}}{{/each}}</span><br>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-4 shipAddress">
            <h6 class="text-center mt-3">Ordered Products</h6>
            <div class="text-secondary">
                <table class="table table-borderless ">
                    <thead>
                        <tr>
                            <td>Products</td>
                            <td>Qty</td>
                            <td>Total</td>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td>{{this.productId.name}}</td>
                            <td>{{this.quantity}}</td>
                            <td>{{this.total}}</td>
                        </tr>

                        {{/each}}
                        <tr>
                            <td>Discount</td>
                            <td>₹{{#each orderDetails}}{{this.discount}}{{/each}}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex m-2">
                    <h5 class="mx-2">Total : </h5>
                    <h5>₹ {{#each orderDetails}}{{totalAmount}}{{/each}} Rs</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-3">
        <a href="/invoice/{{#each orderDetails}}{{this._id}}{{/each}}" class="btn btn-info"
            style="color: white;">DOWNLOAD INVOICE</a>
        <a href="/home" class="btn btn-success" style="color: white;">BACK HOME</a>
    </div>
</section>
