<script>

    //Verify OTP
    const verifyOtp = document.getElementById('verifyOtp');
    verifyOtp.addEventListener('click', (e) => {
        const isvalid = validate()
        const valid = emailValidate()
        const otp = document.getElementById('otp').value
        const email = document.getElementById('email').value
        if (isvalid & valid) {
            const data = {
                otp: otp,
                email: email
            }
            $.ajax({
                method: 'POST',
                url: '/verify_forgot_otp',
                data: data,
                success: (data) => {
                    if (data.status == 'success') {

                        Swal.fire({
                            icon: 'success',
                            title: 'You can Create new Password',
                            showConfirmButton: false,
                            timer: 2000
                        })
                        const id = data.id
                        setTimeout(()=>{
                            location.href=`newPassword?id=${id}`
                        },2000)
                    }else if(data.status=='error'){
                        Swal.fire({
                            icon: 'error',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        })
                    }
                },
                error: () => {
                    Swal.fire({
                        icon: 'error',
                        title: 'error occured',
                        showConfirmButton: false,
                        timer: 2000
                    })
                }

            })

        }

    })

    function emailValidate() {
        const emailRegex = /^[a-zA-Z0-9._%+-]+@gmail+\.[a-zA-Z]{3}$/;
        const email = document.getElementById('email')
        const emailError = document.getElementById('emailError')
        if (email.value.trim() === '') {
            emailError.innerHTML = 'Email field id required';
            email.style.borderColor = 'red'
            setTimeout(() => {
                emailError.innerHTML = ''
                email.style.borderColor = 'black'
            }, 5000)
            return false
        }
        if (!emailRegex.test(email.value)) {
            emailError.innerHTML = 'Please provide a valid Email ID'
            email.style.borderColor = 'red'
            setTimeout(() => {
                emailError.innerHTML = ''
                email.style.borderColor = 'black'
            }, 5000)
            return false

        }
        return true
    }

    function validate() {
        let otp = document.getElementById('otp');
        let otpError = document.getElementById('OTPError')

        const otpRegex = /^[0-9]{6}$/;

        if (otp.value.trim() === '') {
            otpError.innerHTML = 'Please Enter your OTP'
            otp.style.borderColor = 'red'
            setTimeout(() => {
                otpError.innerHTML = ''
                otp.style.borderColor = ''
            }, 5000);
            return false
        }
        if (!otpRegex.test(otp.value)) {
            otpError.innerHTML = 'Please Enter a Valid OTP'
            otp.style.borderColor = 'red';
            setTimeout(() => {
                otpError.innerHTML = ''
                otp.style.borderColor = ''
            }, 5000);
            return false
        }
        return true
    }
</script>