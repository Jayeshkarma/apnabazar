    <script>
        const addCategoryBtn = document.getElementById('addCategoryBtn')
        const category = document.getElementById('categoryName')
        addCategoryBtn.addEventListener('click', () => {
            const isvalid = validate()
            if (isvalid) {
                console.log(category.value);
                let data = {
                    name: category.value
                }
                $.ajax({
                    method: 'POST',
                    url: '/admin/category/add_category',
                    data: data,
                    success: (data) => {
                        if (data.status == 'success') {
                            Swal.fire({
                                icon: 'success',
                                title: 'Category Added',
                                showConfirmButton: false,
                                timer: 2000
                            })
                            setTimeout(() => {
                                location.reload();
                            }, 2000)
                        } else {
                            Swal.fire({
                                icon: 'warning',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 2000
                            })
                        }
                    },
                    error: () => {
                        Swal.fire({
                            icon: 'error',
                            title: 'An error Occured',
                            showConfirmButton: false,
                            timer: 2000
                        })
                        setTimeout(() => {
                            location.reload();
                        }, 2000)
                    }
                })
            }
        })


        function Editvalidate() {
            const nameRegex = /^[A-Z]/;
            const name = document.getElementById('editCatInput')
            const nameError = document.getElementById('editCategoryError')

            if (name.value.trim() == '') {
                nameError.innerHTML = 'Field is Required';
                name.style.borderColor = 'red'
                setTimeout(() => {
                    nameError.innerHTML = ''
                    name.style.borderColor = ''
                }, 5000)
                return false
            }

            if (!nameRegex.test(name.value)) {
                nameError.innerHTML = 'First Letter should be capital'
                name.style.borderColor = 'red'
                setTimeout(() => {
                    nameError.innerHTML = ''
                    name.style.borderColor = ''
                }, 5000)
                return false
            }
            return true
        }
        function validate() {
            const nameRegex = /^[A-Z]/;
            const name = document.getElementById('categoryName')
            const nameError = document.getElementById('categoryError')

            if (name.value.trim() == '') {
                nameError.innerHTML = 'Field is Required';
                name.style.borderColor = 'red'
                setTimeout(() => {
                    nameError.innerHTML = ''
                    name.style.borderColor = ''
                }, 5000)
                return false
            }

            if (!nameRegex.test(name.value)) {
                nameError.innerHTML = 'First Letter should be capital'
                name.style.borderColor = 'red'
                setTimeout(() => {
                    nameError.innerHTML = ''
                    name.style.borderColor = ''
                }, 5000)
                return false
            }
            return true
        }
        //Edit actions
        const saveBtn = document.getElementById('saveBtn');
        saveBtn.addEventListener('click', () => {
            const isvalid = Editvalidate()
            if (isvalid) {
                const id = document.getElementById('idInput');
                const catId = id.value
                const editCatInput = document.getElementById('editCatInput').value
                $.ajax({
                    method: 'POST',
                    data: { name: editCatInput },
                    url: `/admin/category/edit_category/${catId}`,
                    success: (data) => {
                        if (data.status == 'success') {
                            Swal.fire({
                                icon: 'success',
                                title: 'Category updated Successfully',
                                showConfirmButton: false,
                                timer: 2000
                            })
                            setTimeout(() => {
                                location.reload()
                            }, 2000)
                        }
                    },
                    error: () => {
                        Swal.fire({
                            icon: 'error',
                            title: 'An error Occured',
                            showConfirmButton: false,
                            timer: 2000
                        })
                    }
                })
            }
        })

        document.querySelectorAll('.btns').forEach(btn => {
            //const unblockBtn = btn.querySelector('.unBlockBtn');
            //const blockBtn = btn.querySelector('.blockBtn');


            $(".editBtn").click(function () {
                const categoryId = $(this).data("category-id");
                const catName = $(this).data('cat-name');
                const editCatInput = document.getElementById('editCatInput');
                const idInput = document.getElementById('idInput');
                idInput.value = categoryId;
                console.log(categoryId);
                editCatInput.value = catName;
                document.getElementById('modelBtn').click()
            })

            $(".deleteBtn").click(function () {
                const id = $(this).data("category-id");
                const response = Swal.fire({
                    title: "Are you Sure ",
                    text: "To Delete this Category",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#990f0f',
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No !'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "POST",
                            url: `/admin/category/delete_category/${id}`, // Your server route for adding items to the cart
                            success: function (data) {
                                if(data.status=='success'){
                                      Swal.fire({
                                    icon: 'success',
                                    title: 'Category Deleted Successfully',
                                    showConfirmButton: false,
                                    timer: 2000
                                })
                                setTimeout(() => {
                                    location.reload()
                                }, 2000)

                                }
                            },
                            error: function (error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: error.message,
                                    showConfirmButton: false,
                                    timer: 1500
                                })
                            }
                        });
                    }
                })
            })

        })

