    <script>
        document.querySelectorAll('.btns').forEach(btn => {
            $(".unlistBtn").click(function () {
                const couponId = $(this).data("coupon-id");
                //console.log(productId)
                const response = Swal.fire({
                    title: "Are you Sure ",
                    text: "To Unlist this Coupon ",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#990f0f',
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No !'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "GET",
                            url: `/admin/coupons/unlist/${couponId}`, // Your server route for adding items to the cart
                            success: function (data) {
                                if (data.status == 'success') {
                                    Swal.fire({
                                        icon: 'success',
                                        title: data.message,
                                        showConfirmButton: false,
                                        timer: 2000
                                    })
                                    setTimeout(() => {
                                        location.reload()
                                    }, 2000)
                                }else if(data.status=='warning'){
                                    Swal.fire({
                                        icon: 'error',
                                        title: data.message,
                                        showConfirmButton: false,
                                        timer: 2000
                                    })
                                }

                            },
                            error: function (error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: error.message,
                                    showConfirmButton: false,
                                    timer: 2000
                                })

                            }
                        });
                    }
                })
            })

            $(".listBtn").click(function () {
                const couponId = $(this).data("coupon-id");
                //console.log(productId)
                const response = Swal.fire({
                    title: "Are you Sure ",
                    text: "To list this Coupon ",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#990f0f',
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No !'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "GET",
                            url: `/admin/coupons/list/${couponId}`, // Your server route for adding items to the cart
                            success: function (data) {
                                if (data.status == 'success') {
                                    Swal.fire({
                                        icon: 'success',
                                        title: data.message,
                                        showConfirmButton: false,
                                        timer: 2000
                                    })
                                    setTimeout(() => {
                                        location.reload()
                                    }, 2000)
                                }

                            },
                            error: function (error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'An error occured',
                                    showConfirmButton: false,
                                    timer: 2000
                                })

                            }
                        });
                    }
                })
            })

            $(".deleteBtn").click(function () {
                const couponId = $(this).data("coupon-id");
                //console.log(productId)
                const response = Swal.fire({
                    title: "Are you Sure ",
                    text: "To Delete this Coupon ",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#990f0f',
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No !'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "DELETE",
                            url: `/admin/coupons/delete/${couponId}`, // Your server route for adding items to the cart
                            success: function (data) {
                                if (data.status == 'success') {
                                    Swal.fire({
                                        icon: 'success',
