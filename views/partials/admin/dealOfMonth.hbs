            <!--  Header End -->

            <!-- models -->
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" style="display: none;" id="modelBtn" data-bs-toggle="modal"
                data-bs-target="#exampleModal">
                Launch demo modal
            </button>

            <!-- Modal -->
            <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Edit Category</label>
                                <input type="text" id="editCatInput" class="form-control">
                                <span style="color: red;" id="editCategoryError"></span>
                                <input type="hidden" id="idInput">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" id="saveBtn" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>

            <!--model end -->

            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold mb-4">Add New Deal</h5>
                        <div class="d-flex">

                            <form action="/admin/deal_of_month/add" method="post">
                                <span class="mb-3">Select a Product</span>
                                <div class="mt-2">

                                    <select class="form-select" name="product" aria-label="Default select example">
                                        {{#each products}}

                                        <option>{{this.name}}</option>

                                        {{/each}}
                                    </select>
                                    <button type="submit" class="btn btn-success w-100 my-3">ADD</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container p-4">

                <div class="border p-4">
                    <h5 class="card-title fw-semibold mb-4">Existing Deal</h5>
                    <div class=" row">
                        <div class="col-md-6 col-sm-12">
                            <div style="width: 300px;height: 300px;">
                                <img class="img-fluid"
                                    src="/productimages/{{#each deal}}{{this.image}}{{/each}}">
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <span class="mb-2">PRODUCT NAME</span>
                            <input class="form-control mt-3 mb-4" type="text" value="{{#each deal}}{{this.productName}}{{/each}}"
                                aria-label="readonly input example" readonly>
                            <span class="">PRODUCT OFFER (%)</span>
                            <input class="form-control mt-3 mb-4" type="text" value="{{#each deal}}{{this.offer}}{{/each}}"
                                aria-label="readonly input example" readonly>
                            <label for="exampleFormControlTextarea1"  class="form-label">PRODUCT DESCRIPTION</label>
                            <textarea class="form-control" style="height: 200px;" id="exampleFormControlTextarea1" rows="3" readonly>{{#each deal}}{{this.description}}{{/each}}</textarea>
                        </div>
                    </div>
                </div>
            </div>
