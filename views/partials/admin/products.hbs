                                    <td>{{this.name}}</td>
                                    <td>{{this.category}}</td>
                                    <td>{{this.price}}</td>
                                    <td>{{this.offerprice}}</td>
                                    <td>{{this.quantity}}</td>

                                    <td>{{#if this.image}}<img style="width: 30px; height: 30px;"
                                            src="/productimages/{{this.image.[0]}}" alt="">{{/if}} </td>
                                    <td>
                                        <div class="d-flex">
                                            <form action="/admin/products/edit_product/{{this._id}}" method="get">
                                                <button class="btn btn-info p-1 px-3">Edit</button>
                                            </form>

                                        </div>
                                    </td>
                                    <td class="btns">
                                        <button class="deleteBtn" data-product-id="{{this._id}}"
                                            style="border-style: none; background-color: whitesmoke;"><i
