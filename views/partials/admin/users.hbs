    <script>


        document.querySelectorAll('.btns').forEach(btn => {
            const unblockBtn = btn.querySelector('.unBlockBtn');
            const blockBtn = btn.querySelector('.blockBtn');


            $(".unBlockBtn").click(function () {
                const productId = $(this).data("product-id");
                console.log(productId)
                const response = Swal.fire({
                    title: "Are you Sure ",
                    text: "To Unblock this User ",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#990f0f',
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No !'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "GET",
                            url: `users/unblock_user/${productId}`, // Your server route for adding items to the cart
                            success: function (data) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'User Account Unblocked',
                                    showConfirmButton: false,
                                    timer: 2000
                                })
                                setTimeout(() => {
                                    location.reload()
                                }, 2000)

                            },
                            error: function (error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: error.message,
                                    showConfirmButton: false,
                                    timer: 2000
                                })

                            }
                        });
                    }
                })
            })

            $(".blockBtn").click(function () {
                const productId = $(this).data("product-id");
                const response = Swal.fire({
                    title: "Are you Sure ",
                    text: "To Block this User ",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#990f0f',
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No !'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "GET",
                            url: `users/block_user/${productId}`, // Your server route for adding items to the cart
                            success: function (data) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'User Account blocked',
                                    showConfirmButton: false,
                                    timer: 2000
                                })
                                setTimeout(() => {
                                    location.reload()
                                }, 2000)

                            },
                            error: function (error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: error.message,
                                    showConfirmButton: false,
                                    timer: 1500
                                })
                            }
                        });
                    }
                })
            })

        })
    </script>

