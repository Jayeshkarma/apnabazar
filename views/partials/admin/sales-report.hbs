    <script>
        document.getElementById('filterReport').addEventListener('change', () => {
            const selected = document.getElementById('filterReport').value
            console.log(selected);
            switch (selected) {
                case 'today': window.location.href = '/admin/sales_reports?date=today';
                    break;
                case 'week': window.location.href = '/admin/sales_reports?date=week';
                    break
                case 'month': window.location.href = '/admin/sales_reports?date=month';
                    break;
                case 'year': window.location.href = '/admin/sales_reports?date=year';
                    break
                default: window.location.href = '/admin/sales_reports';
            }
        })

        function downloadExcel() {
            let data = document.getElementById('salesReportContent');
            var fp = XLSX.utils.table_to_book(data, { sheet: 'SalesReport' });
            XLSX.write(fp, {
                bookType: 'xlsx',
                type: 'base64'
            });
            XLSX.writeFile(fp, 'Sales Report.xlsx');
        }
    </script>
