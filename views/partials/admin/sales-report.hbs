                            <div style="margin-left: auto;">
                                <button onclick="downloadExcel()" class="btn btn-info">Download as Excel </button>
                            </div>

                            <div style="margin-left: auto;">
                                <select class="form-select" aria-label="Default select example" id="filterReport">
                                    <option>Filter Report</option>
                                    <option value="today" {{#eq selected 'today' }}selected{{/eq}}>Report of Today
                                    </option>
                                    <option value="week" {{#eq selected 'week' }}selected{{/eq}}>Report of this Week
                                    </option>
                                    <option value="month" {{#eq selected 'month' }}selected{{/eq}}>Report of this Month
                                    </option>
                                    <option value="year" {{#eq selected 'year' }}selected{{/eq}}>Report of this Year
                                    </option>
                                </select>
                            </div>
                        </div>
                        <table class="table table-striped" id="salesReportContent">
                            <thead>
                                <tr>
                                    <th scope="col">Order ID</th>
                                    <th scope="col">User Name</th>
                                    <th scope="col">Payment Status</th>
                                    <th scope="col">Order Date</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Payment</th>
                                </tr>
                            </thead>
                            <tbody>

                                {{#each orders}}
                                <tr>
                                    <td>{{this.order}}</td>
                                    <td>{{#if this.user.name}}{{this.user.name}}{{else}}Unknown{{/if}}</td>
                                    <td><span>{{this.orderStatus}}</span></td>
                                    <td>{{this.foramttedDate}}</td>
                                    <td>{{this.totalAmount}}</td>
                                    <td>{{this.paymentMethod}}</td>
                                </tr>

                                {{/each}}

                            </tbody>
                        </table>
