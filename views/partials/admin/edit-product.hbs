            <div class="container-fluid">
                <div class="card">
                    <h5 class="card-title fw-semibold m-3">Edit Product</h5>
                    <div class="card-body">
                        <div class="d-flex ">
                            
                            <form class="row g-3" method="post" action="/admin/products/edit_product/{{id}}"
                                enctype="multipart/form-data">
                                <input type="hidden" name="_method" value="PUT">
                                <div class="col-md-6">
                                    <label for="name" class="form-label">Product Name</label>
                                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                                </div>
                                <div class="col-md-6">
                                    <label for="category" class="form-label">Category</label>
                                    <select id="category" class="form-select" name="category">
                                        <option selected>{{category}}</option>
                                        {{#each categories}}
                                        <option>{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="price" class="form-label">Price</label>
                                    <input type="text" class="form-control" id="price" name="price"
                                        placeholder="Enter Price here" value="{{price}}">
                                </div>
                                <div class="col-md-4">
                                    <label for="offerprice" class="form-label">Offer Price</label>
                                    <input type="text" class="form-control" id="offerprice" name="offerprice"
                                        placeholder="Enter Offer Price here" value="{{offerprice}}">
                                </div>
                                <div class="col-md-4">
                                    <label for="quantity" class="form-label">Qunatity</label>
                                    <input type="text" class="form-control" id="quantity" name="quantity"
                                        placeholder="Enter Qunantity here" value="{{quantity}}">
                                </div>

                                <div class="d-flex">
                                    <div class="col-8 ">
                                        <div class="col-12">
                                            <div class="form">
                                                <label class="mb-2" for="description">Product Description</label>
                                                <input value="{{description}}" type="hidden" id="hidden-input">
                                                <textarea id="text-area" class="form-control" id="description"
                                                    style="height: 150px" name="description"
                                                    value="{{description}}">{{description}}</textarea>

                                            </div>
                                        </div>


                                        <div class="col-md-6 mt-4">
                                            <label for="badge" class="form-label">Badge</label>
                                            <input type="text" class="form-control" id="badge" name="badge"
                                                placeholder="Add Badge" value="{{badge}}">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="color" class="form-label">Color</label>
                                            <input type="text" class="form-control" id="color" name="color"
                                                placeholder="Product Color" value="{{color}}">
                                        </div>
                                        <div class="col-12 mt-3">
                                            <label for="image" class="form-label">Upload Images</label>
                                            <div class="input-group">
                                                <input type="file" class="form-control" id="image" name="images"
                                                    multiple>
                                            </div>
                                        </div>
                                        <div class="col-12 mt-3">
                                            <label>Delete Existing images</label>
                                            {{#if image.[0]}}
                                            <div class="form-check mt-2">
                                                <input class="form-check-input" type="checkbox" value="{{image.[0]}}"
                                                    name="image1" id="defaultCheck1">
                                                <label class="form-check-label" for="defaultCheck1">
                                                    Image 1
                                                </label>
                                            </div>
                                            {{/if}}
                                            {{#if image.[1]}}
                                            <div class="form-check mt-2">
                                                <input class="form-check-input" type="checkbox" value="{{image.[1]}}"
                                                    name="image2" id="defaultCheck1">
                                                <label class="form-check-label" for="defaultCheck1">
                                                    Image 2
                                                </label>
                                            </div>
                                            {{/if}}
                                            {{#if image.[2]}}
                                            <div class="form-check mt-2">
                                                <input class="form-check-input" type="checkbox" value="{{image.[2]}}"
                                                    name="image3" id="defaultCheck1">
                                                <label class="form-check-label" for="defaultCheck1">
                                                    Image 3
                                                </label>
                                            </div>
                                            {{/if}}
                                        </div>
                                        <div class="col-12 mt-3">
                                            <button style="width: 100%;" type="submit" class="btn btn-primary">SAVE
                                                CHANGES</button>
                                        </div>
                                    </div>
                                    <div>
                                        <label style="margin-left: 10px;" class="mb-3">Images</label>
                                        <div style="height: 270px;margin-left:10px; width:270px"
                                            class="col-3 border ml-1">


                                            <div id="carouselExampleIndicators" class="carousel slide">
                                                <div class="carousel-indicators">
                                                    {{#if image.[0]}}<button type="button"
                                                        data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                                        class="active" aria-current="true"
                                                        aria-label="Slide 1"></button>{{/if}}
                                                    {{#if image.[1]}}<button type="button"
                                                        data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                                        aria-label="Slide 2"></button>{{/if}}
                                                    {{#if image.[2]}}<button type="button"
                                                        data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                                        aria-label="Slide 3"></button>{{/if}}
                                                </div>
                                                <div class="carousel-inner">
                                                    {{#if image.[0]}}
                                                    <div class="carousel-item active">
                                                        <p class="text-center mt-1">Image 1</p>
                                                        <img style="height: 300px;"
                                                            src="/productimages/{{this.image.[0]}}"
                                                            class="d-block w-100" alt="...">
                                                    </div>
                                                    {{/if}}
                                                    {{#if image.[1]}}
                                                    <div class="carousel-item">
                                                        <p class="text-center mt-1">Image 2</p>
                                                        <img style="height: 300px;" src="/productimages/{{image.[1]}}"
                                                            class="d-block w-100" alt="...">
                                                    </div>
                                                    {{/if}}
                                                    {{#if image.[2]}}
                                                    <div class="carousel-item">
                                                        <p class="text-center mt-1">Image 3</p>
                                                        <img style="height: 300px;" src="/productimages/{{image.[2]}}"
                                                            class="d-block w-100" alt="...">
                                                    </div>
                                                    {{/if}}
                                                </div>
                                                <button class="carousel-control-prev" type="button"
                                                    data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                                    <span class="carousel-control-prev-icon " aria-hidden="true"></span>
                                                    <i style="color: black;font-size: 27px;" class='bx bx-chevron-left '
                                                        aria-hidden="true"></i>
                                                    <span class="visually-hidden">Previous</span>
                                                </button>
                                                <button class="carousel-control-next" type="button"
                                                    data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                                    <i style="color: black;font-size: 27px;"
                                                        class='bx bx-chevron-right ' aria-hidden="true"></i>
                                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                    <span class="visually-hidden">Next</span>
                                                </button>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </form>
